{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@components/*": ["app/components/*"],
      "@pages/*": ["app/pages/*"],
      "@redux/*": ["app/redux/*"],
      "@services/*": ["app/services/*"],
      "@shared/*": ["app/shared/*"],
      "@config/*": ["app/config/*"],
      "@env": ["environments/*"]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
